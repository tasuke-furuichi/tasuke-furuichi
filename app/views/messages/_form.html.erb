<%= form_for(message) do |f| %>
  <% if message.error.any? %>
    <div id = "error_explanation">
      <ul>
        <% message.error.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :title, 'タイトル' %>
  <%= f.text_field :title %>
  
  <%= f.label :content, 'メッセージ' %>
  <%= f.text_field :content%>
  <%= f.submit '投稿'%>
<% end %>